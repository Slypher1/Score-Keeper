<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Button_pt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dim_margin1</item>
        <item name="android:background">@drawable/button_point</item>
        <item name="android:textSize">@dimen/dim_button_text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button_sr">
        <item name="android:layout_margin">@dimen/dim_margin3</item>
        <item name="android:background">@drawable/button_control</item>
    </style>

    <style name="player">
        <item name="android:layout_margin">@dimen/dim_margin2</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/dim_player</item>
    </style>

    <style name="score">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dim_score</item>
    </style>

    <style name="category">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/dim_player</item>
    </style>

</resources>
